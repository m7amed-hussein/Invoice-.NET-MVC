@model CreateInvoiceDto

@{
    ViewData["Title"] = "Create";
}

<h4>New Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" class="form-control" >
                    <option value=0>Cash</option>
                    <option value=1>Credit Card</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @for (int i = 0; i < 10; i++)
            {
                <div class="row">
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 py-2">
                    <label asp-for="@Model.Items[i].ItemCode" class="control-label"></label>
                    <input asp-for="@Model.Items[i].ItemCode" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 py-2">
                    <label asp-for="@Model.Items[i].ItemName" class="control-label"></label>
                    <input asp-for="@Model.Items[i].ItemName" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 py-2">
                    <label asp-for="@Model.Items[i].Quantity" class="control-label"></label>
                    <input asp-for="@Model.Items[i].Quantity" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 py-2">
                    <label asp-for="@Model.Items[i].Price" class="control-label"></label>
                    <input asp-for="@Model.Items[i].Price" class="form-control" />
                </div>
            </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

